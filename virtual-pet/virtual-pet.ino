// Checks if the creature is dead
boolean isDead(){
  if(food < 0.0){
    status = "food :(";
    alreadyDied = 1;
  } else if(water < 0.0){
    status = "water :(";
    alreadyDied = 1;
  } else if(happiness < 0.0){
    status = "Sad :( :(";
    alreadyDied = 1;
  } else if(sleep < 0.0 ){
    status = "no sleep :(";
    alreadyDied = 1;
  } else if (health < 0.0){
    status = "sick :(";
    alreadyDied = 1;
  } else if (alreadyDied == 1) {
    status = "undead";
  }
}

// Lowers states over time
void timePasses(){
  if(rand()%2){
    food -= 0.001;
    water -= 0.004;
    happiness -= 0.0002;
    sleep -= 0.003;
    health = (food + water + happiness + sleep) / 4;

  }
}

void saveGame() {
    EEPROM.update(100, water);
    EEPROM.update(101, food);
    EEPROM.update(102, happiness);
    EEPROM.update(103, sleep);
    EEPROM.update(104, health);
}

void loadGame() {
    water = (float) EEPROM.read(100);
    food = (float) EEPROM.read(101);
    happiness = (float) EEPROM.read(102);
    sleep = (float) EEPROM.read(103);
    health = (float) EEPROM.read(104);
}
